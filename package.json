{
  "name": "genomelens",
  "version": "1.0.0",
  "description": "A fast, elegant sequence viewer and analysis tool for DNA/RNA/protein sequences",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
